<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.user.WithdrawListActivity">

    <ImageView
        android:id="@+id/withdraw_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:src="@mipmap/icon_no_data" />

    <com.caidian310.view.custom.RefreshLayout
        android:id="@+id/withdraw_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/withdraw_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#00000000"
            android:dividerHeight="0dp"/>

    </com.caidian310.view.custom.RefreshLayout>

</LinearLayout>