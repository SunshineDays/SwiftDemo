<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <LinearLayout
        android:id="@+id/pay_record_foot_series"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp">

        <TextView
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="方案编号"
            android:textColor="@color/grayThree"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/pay_record_foot_bet_number"

            android:layout_width="286dp"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:text="方案编号"
            android:textColor="@color/grayNine"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp">

        <TextView

            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="投注时间"
            android:textColor="@color/grayThree"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/pay_record_foot_bet_time"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="2018-01-03"
            android:textColor="@color/grayNine"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pay_record_foot_order_person_linear"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:visibility="gone">

        <TextView

            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="发单人"
            android:textColor="@color/grayThree"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/pay_record_foot_order_person"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="2018-01-03"
            android:textColor="@color/grayNine"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pay_record_foot_order_secret_linear"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:visibility="gone">

        <TextView

            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="保密设置"
            android:textColor="@color/grayThree"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/pay_record_foot_order_secret"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="截止后公开"
            android:textColor="@color/grayNine"
            android:textSize="12dp" />
    </LinearLayout>
</LinearLayout>
