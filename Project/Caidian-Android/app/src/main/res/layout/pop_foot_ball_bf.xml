<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/edge_bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pop_bf_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/grayThree"
            android:text="[8]赫塔菲" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="VS" />

        <TextView
            android:id="@+id/pop_bf_away"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/grayThree"

            android:text="[8]赫塔菲" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:background="@color/homeWin"
                    android:gravity="center"

                    android:text="胜"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/pop_bf_3_fixed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:visibility="gone"
                    android:background="@drawable/edge_top_right_bottom"
                    android:textColor="@color/blueHigh"
                    android:text="未开"/>


                <LinearLayout

                    android:id="@+id/pop_bf_3_linear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <TextView
                            android:id="@+id/pop_bf_1_0"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/edge_top_right_bottom"
                            android:gravity="center"
                            android:text="1:0"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/pop_bf_2_0"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/edge_top_right_bottom"
                            android:gravity="center"
                            android:text="1:06:0"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/pop_bf_2_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/edge_top_right_bottom"
                            android:gravity="center"
                            android:text="1:0 6:0"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/pop_bf_3_0"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/edge_top_right_bottom"
                            android:gravity="center"
                            android:text="1:0  6:0"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/pop_bf_3_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/edge_top_right_bottom"
                            android:gravity="center"
                            android:text="1:0 /n 6:0"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <TextView
                            android:id="@+id/pop_bf_3_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/edge_right_bottom"
                            android:gravity="center"
                            android:text="1:06:0"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/pop_bf_4_0"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="12dp"
                            android:background="@drawable/edge_right_bottom"
                            android:gravity="center"
                            android:text="1:06:0" />

                        <TextView
                            android:id="@+id/pop_bf_4_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/edge_right_bottom"
                            android:gravity="center"
                            android:text="1:0 6:0"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/pop_bf_4_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/edge_right_bottom"
                            android:gravity="center"
                            android:text="1:0  6:0"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/pop_bf_5_0"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/edge_right_bottom"
                            android:gravity="center"
                            android:text="1:0 /n 6:0"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/pop_bf_5_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:background="@drawable/edge_right_bottom"
                            android:gravity="center"
                            android:text="5:1"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/pop_bf_5_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:background="@drawable/edge_right_bottom"
                            android:gravity="center"
                            android:text="5:2"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/pop_bf_3_other"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:background="@drawable/edge_right_bottom"
                            android:gravity="center"
                            android:text="其他"

                            android:textSize="12dp" />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:background="@color/yellowFAB4CC"
                    android:gravity="center"

                    android:text="平"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/pop_bf_1_fixed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:visibility="gone"
                    android:background="@drawable/edge_right_bottom"
                    android:textColor="@color/blueHigh"
                    android:text="未开"/>





                <LinearLayout
                    android:id="@+id/pop_bf_1_linear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <TextView
                            android:id="@+id/pop_bf_0_0"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/edge_right_bottom"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:text="0:0" />

                        <TextView
                            android:id="@+id/pop_bf_1_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/edge_right_bottom"
                            android:gravity="center"
                            android:text="1:1"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/pop_bf_2_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/edge_right_bottom"
                            android:gravity="center"
                            android:text="2:2"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/pop_bf_3_3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/edge_right_bottom"
                            android:gravity="center"
                            android:text="3:3"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/pop_bf_1_other"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/edge_right_bottom"
                            android:gravity="center"
                            android:text="平其他"
                            android:textSize="12dp" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="120dp">

                <TextView
                    android:id="@+id/pop_bf_0_fixed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:visibility="gone"
                    android:background="@drawable/edge_right_bottom"
                    android:textColor="@color/blueHigh"
                    android:text="未开"/>


                <TextView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:background="@color/blue62AFFE"
                    android:gravity="center"
                    android:text="负"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:id="@+id/pop_bf_0_linear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <TextView
                            android:id="@+id/pop_bf_0_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/edge_right_bottom"
                            android:gravity="center"
                            android:text="0:1"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/pop_bf_0_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/edge_right_bottom"
                            android:gravity="center"
                            android:text="0:2"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/pop_bf_1_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/edge_right_bottom"
                            android:gravity="center"
                            android:text="1:2"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/pop_bf_0_3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/edge_right_bottom"
                            android:gravity="center"
                            android:text="0:3"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/pop_bf_1_3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/edge_right_bottom"
                            android:gravity="center"
                            android:text="1:3"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <TextView
                            android:id="@+id/pop_bf_2_3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/edge_right_bottom"
                            android:gravity="center"
                            android:text="2:3"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/pop_bf_0_4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/edge_right_bottom"
                            android:gravity="center"
                            android:text="0:4"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/pop_bf_1_4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/edge_right_bottom"
                            android:gravity="center"
                            android:text="1:4"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/pop_bf_2_4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/edge_right_bottom"
                            android:gravity="center"
                            android:text="2:4"

                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/pop_bf_0_5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/edge_right_bottom"
                            android:gravity="center"
                            android:text="0:5"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/pop_bf_1_5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:background="@drawable/edge_right_bottom"
                            android:gravity="center"
                            android:text="1:5"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/pop_bf_2_5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:background="@drawable/edge_right_bottom"
                            android:gravity="center"
                            android:text="2:5"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/pop_bf_0_other"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:background="@drawable/edge_right_bottom"
                            android:gravity="center"
                            android:text="负其他"

                            android:textSize="12dp" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingTop="20dp"
            android:orientation="horizontal">

            <TextView
               android:id="@+id/pop_bf_cancel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="取消"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#FF5EA2BE"
                android:background="@drawable/angle_round_cancle"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/pop_bf_sure"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/edge_round_sure"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="确定"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
