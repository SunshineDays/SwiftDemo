<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingRight="10dp">

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/row_single"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/icon_single" />

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/row_week"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center|bottom"
                    android:text="-"
                    android:textColor="@color/grayThree"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/row_lname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:maxLength="5"
                    android:text="-"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/row_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/grayThree"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/row_body_open_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/item_down"
                    android:visibility="gone" />
            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/foot_item_row_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:lines="1"
                    android:text="-"
                    android:textColor="@color/grayThree" />

                <TextView
                    android:id="@+id/foot_item_row_vs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="VS" />

                <TextView
                    android:id="@+id/foot_item_row_away"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/grayThree" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/row_let_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="0.8dp"
                        android:paddingRight="0.8dp"
                        android:paddingTop="0.8dp">

                        <TextView
                            android:id="@+id/row_let_txt"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:background="@color/grayE6e6e6"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/graySix"
                            android:textSize="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="3">

                            <TextView
                                android:id="@+id/row_spf_fixed"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/edge_top_right_bottom"
                                android:gravity="center"
                                android:text="未开"
                                android:textColor="@color/blueHigh"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/row_win"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/edge_top_right_bottom"
                                android:gravity="center"
                                android:text="胜"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/row_draw"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/edge_top_right_bottom"
                                android:gravity="center"
                                android:text="胜"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/row_lost"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/edge_top_right_bottom"
                                android:gravity="center"
                                android:text="胜"
                                android:textSize="12dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:id="@+id/foot_item_row_line"
                        android:layout_width="match_parent"

                        android:layout_height="1dp"
                        android:background="@color/colorPrimaryDark"
                        android:visibility="gone" />


                    <LinearLayout
                        android:id="@+id/row_no_let_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="0.8dp"

                        android:paddingRight="0.8dp">

                        <TextView
                            android:id="@+id/no_let_txt"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:background="@color/homeWin"
                            android:gravity="center"
                            android:text="+1"
                            android:textColor="@color/white"
                            android:textSize="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="3">

                            <TextView
                                android:id="@+id/row_rqspf_fixed"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/edge_right_bottom"
                                android:gravity="center"
                                android:text="未开"
                                android:textColor="@color/blueHigh"
                                android:visibility="gone" />


                            <TextView
                                android:id="@+id/row_let_win"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/edge_right_bottom"
                                android:gravity="center"
                                android:text="胜"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/row_let_draw"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/edge_right_bottom"
                                android:gravity="center"
                                android:text="胜"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/row_let_lost"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/edge_right_bottom"
                                android:gravity="center"
                                android:text="胜"
                                android:textSize="12dp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/row_open"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/edge_top_right_bottom"
                    android:gravity="center"
                    android:text="展开"

                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
