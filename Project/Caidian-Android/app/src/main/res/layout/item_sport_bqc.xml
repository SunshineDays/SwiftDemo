<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:paddingBottom="10dp"

    android:paddingRight="10dp">


    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/row_single"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_single"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/row_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center|bottom"
                android:text="周五026"
                android:textColor="@color/grayThree"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/row_lname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="西甲"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/row_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:text="23:50 截止"
                android:textColor="@color/grayThree"
                android:textSize="12dp" />

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/foot_item_row_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:lines="1"
                android:text="[10]皇家社会"
                android:textColor="@color/grayThree" />

            <TextView
                android:id="@+id/foot_item_row_vs"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="VS" />

            <TextView
                android:id="@+id/foot_item_row_away"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="皇家社会[7]"
                android:lines="1"
                android:textColor="@color/grayThree" />
        </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/row_let_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/row_no_let_txt"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:background="@color/blueLow"
                        android:gravity="center"
                        android:text="半"
                        android:textColor="@color/blue"
                        android:textSize="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="3">
                        <TextView
                            android:id="@+id/row_spf_fixed"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:gravity="center"
                            android:background="@drawable/edge_top_right_bottom"
                            android:textColor="@color/blueHigh"
                            android:text="未开"/>

                        <TextView
                            android:id="@+id/row_win"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/edge_top_right_bottom"
                            android:gravity="center"
                            android:text="胜"
                            android:textColor="@color/graySix"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/row_draw"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/edge_top_right_bottom"
                            android:gravity="center"
                            android:text="平"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/row_lost"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/edge_top_right_bottom"
                            android:gravity="center"
                            android:text="负"
                            android:textSize="12dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row_no_let_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/row_let_txt"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:background="@color/redLow"
                        android:gravity="center"
                        android:text="全"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="3">
                        <TextView
                            android:id="@+id/row_rqspf_fixed"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:gravity="center"
                            android:background="@drawable/edge_right_bottom"
                            android:textColor="@color/blueHigh"
                            android:text="未开"/>


                        <TextView
                            android:id="@+id/row_let_win"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/edge_right_bottom"
                            android:gravity="center"
                            android:text="胜"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/row_let_draw"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/edge_right_bottom"
                            android:gravity="center"
                            android:text="平"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/row_let_lost"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/edge_right_bottom"
                            android:gravity="center"
                            android:text="负"
                            android:textSize="12dp" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>



    </LinearLayout>


</LinearLayout>
