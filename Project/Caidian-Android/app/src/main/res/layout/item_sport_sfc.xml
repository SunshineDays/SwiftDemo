<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:paddingBottom="10dp"

    android:paddingRight="10dp">


    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/row_single"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_single"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/row_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center|bottom"
                android:text="周五026"
                android:textColor="@color/grayThree"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/row_lname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="西甲"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/row_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:text="23:50 截止"
                android:textColor="@color/grayThree"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/row_body_open_img"
                android:layout_width="20dp"
                android:layout_height="20dp"

                android:layout_gravity="center"
                android:src="@mipmap/item_down" />
        </LinearLayout>

    </RelativeLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView


                android:id="@+id/foot_item_row_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:lines="1"
                android:text="[10]皇家社会"
                android:textColor="@color/grayThree" />

            <TextView
                android:id="@+id/foot_item_row_vs"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="VS" />

            <TextView
                android:id="@+id/foot_item_row_away"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:lines="1"
                android:text="皇家社会[7]"
                android:textColor="@color/grayThree" />
        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/row_spf_fixed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edge_top_right_bottom"
                android:gravity="center"
                android:text="未开"
                android:textColor="@color/blueHigh"
                android:visibility="gone" />

            <TextView
                android:id="@+id/row_win"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edge_top_right_bottom_left"
                android:gravity="center"
                android:text="胜"
                android:textColor="@color/graySix"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/row_draw"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edge_top_right_bottom"
                android:gravity="center"
                android:text="胜"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/row_lost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edge_top_right_bottom"
                android:gravity="center"
                android:text="胜"
                android:textSize="12dp" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
