<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.caidian310.activity.user.WithdrawCashActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"


        android:background="@drawable/angle_all_bian_gray"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="提款金额"
            android:textColor="@color/grayThree"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/withdraw_money"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入提款金额,最少10元"
            android:inputType="numberDecimal"
            android:textSize="14dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/withdraw_commit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/round_red"
        android:gravity="center"
        android:text="提现"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="1dp"
        android:background="@drawable/angle_round_logo_yellow_tip"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:textSize="14dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="温馨提示 : "/>

            <TextView
                android:text="12dp"
                android:textSize="12dp"
                android:id="@+id/withdraw_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:lineSpacingExtra="6dp"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
