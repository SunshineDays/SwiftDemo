<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingLeft="10dp"
        android:background="@drawable/edge_bottom"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:text="充值金额"
            android:textColor="@color/grayThree"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/item_recharge_money"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/textView12"
            android:gravity="center_vertical"
            android:hint="100"
            android:inputType="numberDecimal"
            android:digits="0123456789"
            android:background="@null"
            android:minWidth="30dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textColor="@color/grayThree"
            android:textColorHint="@color/gray"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:text="元"
            android:textColor="@color/graySix"
            android:textSize="14dp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="10dp"
        android:paddingBottom="22dp"
        android:paddingTop="22dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_recharge_money100"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="100元"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/angle_color_text_view_select"
            android:textColor="@color/red"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/item_recharge_money200"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="200元"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/grayThree"
            android:background="@drawable/angle_color_text_view_normal"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/item_recharge_money300"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="300元"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/angle_color_text_view_normal"
            android:textColor="@color/grayThree"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/item_recharge_money500"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:text="500元"
            android:background="@drawable/angle_color_text_view_normal"
            android:layout_marginLeft="10dp"
            android:textColor="@color/grayThree"
            android:textSize="16dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/grayLow"/>


</LinearLayout>
