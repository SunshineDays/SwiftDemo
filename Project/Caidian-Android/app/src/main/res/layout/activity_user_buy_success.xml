<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical"
    tools:context="com.wdb.iuliao.activity.buy.BuySuccessActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="恭喜您!购买成功!"
        android:textColor="@color/blueHigh"
        android:textSize="18dp" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edge_bottom_gray"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="购买彩种"
            android:textColor="@color/grayThree" />

        <TextView
            android:id="@+id/pay_success_lottery"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/grayThree" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edge_bottom_gray"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="账户余额"
            android:textColor="@color/grayThree" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="-"
            android:id="@+id/pay_success_money"
            android:textColor="@color/colorPrimaryDark" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edge_bottom_gray"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="彩金余额"
            android:textColor="@color/grayThree" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:id="@+id/pay_success_reward"
            android:text="-"
            android:textColor="@color/colorPrimaryDark" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edge_bottom_gray"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="账户积分"
            android:textColor="@color/grayThree" />

        <TextView
            android:id="@+id/pay_success_integral"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/colorPrimaryDark" />
    </RelativeLayout> <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edge_bottom_gray"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="订单号"
            android:textColor="@color/grayThree" />

        <TextView
            android:id="@+id/pay_success_order_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/grayThree" />
    </RelativeLayout>

    <TextView
        android:id="@+id/pay_success_continue"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:textSize="16dp"
        android:gravity="center"
        android:background="@drawable/login_round"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:text="继续购彩"/>
    <TextView
        android:id="@+id/pay_success_pay_log"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="投注记录"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp"
        android:gravity="center"
        android:background="@drawable/angle_round_logo"/>
</LinearLayout>
