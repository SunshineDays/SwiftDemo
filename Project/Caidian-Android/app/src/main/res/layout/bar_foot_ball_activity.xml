<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="?actionBarSize">

    <ImageView
        android:id="@+id/bar_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"

        android:src="@mipmap/icon_back" />


    <RelativeLayout
        android:id="@+id/bar_foot_center_relative"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bar_foot_center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="混合投注"
            android:paddingRight="12dp"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/bar_foot_img_down"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="-10dp"
            android:layout_toRightOf="@id/bar_foot_center"

            android:src="@mipmap/icon_down" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/bar_foot_img_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/bar_foot_img_more"
        android:paddingBottom="17dp"
        android:paddingLeft="-10dp"

        android:paddingRight="-15dp"
        android:paddingTop="17dp"
        android:src="@mipmap/icon_choose" />


    <ImageView
        android:id="@+id/bar_foot_img_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="17dp"
        android:paddingLeft="-15dp"
        android:paddingRight="-5dp"
        android:paddingTop="17dp"
        android:src="@mipmap/icon_more" />
</RelativeLayout>
