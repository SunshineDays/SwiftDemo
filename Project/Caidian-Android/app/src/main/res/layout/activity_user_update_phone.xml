<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/edge_bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="right|center"
            android:paddingLeft="5dp"
            android:text="手机号码 : "
            android:textColor="#333333"
            android:textSize="14dp" />
        <EditText
            android:id="@+id/update_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView8"
            android:layout_weight="4"
            android:background="@null"
            android:maxLines="1"
            android:singleLine="true"
            android:maxEms="11"
            android:inputType="phone"
            android:gravity="left|center"
            android:hint="请输入新的手机号码"
            android:paddingLeft="5dp"
            android:textColor="#999999"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/update_get_code"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@+id/editText"
            android:layout_alignBottom="@+id/editText"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/selector_register_get_code"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#F49900"
            android:textSize="14dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/edge_bottom">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="right|center"
            android:paddingLeft="5dp"
            android:text="验  证  码 : "
            android:textColor="#333333"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/update_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView8"
            android:background="@null"
            android:gravity="left|center"
            android:hint="请输入验证码"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType="number"
            android:maxEms="11"
            android:paddingLeft="5dp"
            android:textColor="#999999"
            android:textSize="14dp" />


    </RelativeLayout>


    <Button
        android:id="@+id/update_commit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/login_forget_password"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_round"
        android:text="确  定"
        android:textColor="@color/white"
        android:textSize="16dp" />

</LinearLayout>
