<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/item_recharge_root"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_recharge_logo"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:scaleType="fitXY"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:src="@mipmap/icon_sign_win" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginStart="63dp">

            <TextView
                android:id="@+id/item_recharge_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="微信支付(推荐)"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/grayThree"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/item_recharge_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="推荐理由"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textColor="@color/graySix"
                android:textSize="12dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/item_recharge_statue"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/icon_select_normal" />

    </RelativeLayout>

</LinearLayout>

