<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingRight="10dp">
    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/row_single"
            android:layout_width="30dp"
            android:visibility="gone"
            android:layout_height="30dp"
            android:src="@mipmap/icon_single"/>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <TextView
                android:id="@+id/row_week"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12dp"
                android:textColor="@color/grayThree"
                android:text="-" />

            <TextView
                android:id="@+id/row_lname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="-"

                android:singleLine="true"
                android:maxLength="5"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/row_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12dp"
                android:textColor="@color/grayThree"

                android:text="-" />

            <ImageView
                android:id="@+id/row_body_open_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:visibility="gone"
                android:src="@mipmap/item_down" />
        </LinearLayout>
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/foot_item_row_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="@color/grayThree"

                android:lines="1"
                android:text="-" />

            <TextView
                android:id="@+id/foot_item_row_vs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="VS" />

            <TextView
                android:id="@+id/foot_item_row_away"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/grayThree"
                android:text="-" />
        </LinearLayout>
        <TextView
            android:id="@+id/row_bqc_fixed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/edge_top_right_bottom_left"
            android:textColor="@color/blueHigh"
            android:text="未开"/>


        <LinearLayout
            android:id="@+id/row_bqc_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:background="@drawable/edge_left"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/row_let_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:background="@drawable/edge_left"
                        android:orientation="horizontal"
                        android:weightSum="4">


                        <TextView
                            android:id="@+id/row_one"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="胜"
                            android:background="@drawable/edge_top_right_bottom"
                            android:textSize="12dp" />


                        <TextView
                            android:id="@+id/row_two"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="胜"
                            android:background="@drawable/edge_top_right_bottom"

                            android:textSize="12dp" />


                        <TextView
                            android:id="@+id/row_three"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="胜"
                            android:background="@drawable/edge_top_right_bottom"

                            android:textSize="12dp" />


                        <TextView
                            android:id="@+id/row_four"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="胜"
                            android:background="@drawable/edge_top_right_bottom"

                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row_no_let_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/edge_left">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="4">


                        <TextView
                            android:id="@+id/row_let_one"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:background="@drawable/edge_right_bottom"

                            android:text="胜"
                            android:textSize="12dp" />


                        <TextView
                            android:id="@+id/row_let_two"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="胜"
                            android:background="@drawable/edge_right_bottom"

                            android:textSize="12dp" />


                        <TextView
                            android:id="@+id/row_let_three"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="胜"
                            android:background="@drawable/edge_right_bottom"

                            android:textSize="12dp" />


                        <TextView
                            android:id="@+id/row_let_four"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="胜"
                            android:background="@drawable/edge_right_bottom"

                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/row_draw_draw"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="@drawable/edge_top_right_bottom"
                android:gravity="center"
                android:text="平平" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
