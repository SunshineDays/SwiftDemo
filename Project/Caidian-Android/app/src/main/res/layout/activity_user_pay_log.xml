<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.caidian310.activity.user.PayLogActivity">

    <ImageView
        android:id="@+id/account_record_bg_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingTop="50dp"
        android:src="@mipmap/icon_no_data"
        android:visibility="gone" />

    <com.caidian310.view.custom.RefreshLayout
        android:id="@+id/account_record_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/account_record_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.caidian310.view.custom.RefreshLayout>


</LinearLayout>
