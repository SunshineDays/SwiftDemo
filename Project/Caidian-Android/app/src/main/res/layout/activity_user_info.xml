<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical"
    android:id="@+id/info_relative">

    <RelativeLayout
        android:id="@+id/info_header_img"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="用户头像"
            android:textColor="#333333"
            android:textSize="14dp" />

        <com.caidian310.view.custom.RoundImageView
            android:id="@+id/header_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="40dp"
            android:src="@mipmap/icon_no_user"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:src="@mipmap/ic_btn_search_go" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/info_nick_name_relative"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="1dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="昵        称"
                android:textColor="#333333"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/info_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:gravity="center"
                android:textSize="12dp"
                android:src="@mipmap/icon_no_user"
                android:text="16" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:visibility="gone"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:src="@mipmap/ic_btn_search_go" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/info_sex_relative"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="1dp"
            android:visibility="gone"
            android:background="@color/white"
            android:layout_marginBottom="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="性别"
                android:textColor="#333333"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/info_sex"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="40dp"
                android:gravity="center"
                android:textSize="12dp"
                android:src="@mipmap/icon_no_user"
                android:text="男" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:src="@mipmap/ic_btn_search_go" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/info_password_relatvie"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="密码重置"
                android:textColor="#333333"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="40dp"
                android:gravity="center"
                android:textSize="12dp"
                android:src="@mipmap/icon_no_user"
                android:text="******"
                android:id="@+id/textView" />


            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:src="@mipmap/ic_btn_search_go" />



        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/info_real_name_relative"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="实名认证"
                android:textColor="#333333"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/info_real_name"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="40dp"
                android:gravity="center"
                android:textSize="12dp"
                android:src="@mipmap/icon_no_user" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:src="@mipmap/ic_btn_search_go" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/info_bing_bank_relative"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:layout_marginBottom="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="绑定银行卡 "
                android:textColor="#333333"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/info_bind_bank"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="40dp"
                android:gravity="center"
                android:textSize="12dp"
                android:src="@mipmap/icon_no_user"
                android:text="" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:src="@mipmap/ic_btn_search_go" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/info_phone_relative"
            android:layout_width="match_parent"
            android:layout_height="45dp"

            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="修改手机号"
                android:textColor="#333333"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/info_phone"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="40dp"
                android:gravity="center"
                android:textSize="12dp"
                android:src="@mipmap/icon_no_user"
                android:text="137******26" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:src="@mipmap/ic_btn_search_go" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/info_header_weixin"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/info_phone"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="微信"
                android:textColor="#999999"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="40dp"
                android:gravity="center"
                android:src="@mipmap/icon_no_user" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/info_header_qq"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/info_header_weixin"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="QQ"
                android:textColor="#999999"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="40dp"
                android:gravity="center"
                android:src="@mipmap/icon_no_user" />

        </RelativeLayout>
    </LinearLayout>





    <LinearLayout
        android:id="@+id/info_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="25dp" />
    </LinearLayout>

</LinearLayout>
