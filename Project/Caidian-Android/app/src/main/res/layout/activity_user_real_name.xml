<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wdb.iuliao.activity.user.RealNameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edge_bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_weight="1"

            android:orientation="horizontal"
            android:background="@drawable/edge_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:paddingRight="10dp"
                android:textColor="#333333"
                android:text="真实姓名" />

            <EditText
                android:id="@+id/real_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/grayThree"
                android:textSize="14dp"
                android:hint="请输入真实姓名"/>


            　　
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/edge_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:paddingRight="10dp"
                android:gravity="center"
                android:textColor="@color/grayThree"
                android:text="身份证号" />

            <EditText
                android:id="@+id/real_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:background="@null"
                android:hint="请输入身份证号"
                android:textSize="14dp"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/grayThree"
                android:layout_marginRight="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/real_card_two_linear"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/edge_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:paddingRight="10dp"
                android:gravity="center"
                android:textColor="#333333"
                android:text="重复输入" />

            <EditText
                android:id="@+id/real_card_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:background="@null"
                android:hint="请重复输入身份证号"
                android:textSize="14dp"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/grayThree"
                android:layout_marginRight="20dp"
                />
        </LinearLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/real_sure"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/login_round"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="认  证"
        android:layout_marginTop="100dp"
        android:textColor="@color/white"

        android:textSize="14dp" />

</LinearLayout>
