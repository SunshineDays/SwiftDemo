<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/edge_bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="right|center"
            android:paddingLeft="5dp"
            android:text="新密码 : "
            android:textColor="#333333"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/update_password"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView8"
            android:layout_weight="4"
            android:background="@null"
            android:inputType="textPassword"
            android:gravity="left|center"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ.,:-_()~|\!?"
            android:hint="6-16个字母,数字组合"
            android:paddingLeft="5dp"
            android:textColor="#999999"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/update_check_box"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:padding="11dp"
            android:src="@mipmap/icon_password_normal" />
    </LinearLayout>

    <Button

        android:id="@+id/update_commit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/login_forget_password"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_round"
        android:text="确  定"
        android:textColor="@color/white"
        android:textSize="16dp" />
</LinearLayout>