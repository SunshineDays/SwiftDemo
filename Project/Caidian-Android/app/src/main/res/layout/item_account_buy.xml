<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_buy_type_root"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="match_parent">


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:orientation="horizontal"
            android:paddingRight="26dp">

            <TextView
                android:id="@+id/item_buy_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/item_buy_type"
                android:gravity="left|bottom"
                android:lines="1"
                android:text="竞彩-混合投注"
                android:textColor="@color/grayThree"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/item_buy_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:gravity="bottom|right"
                android:text="自购"
                android:textColor="@color/grayThree"
                android:textSize="12dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_buy_img"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:src="@mipmap/ic_btn_search_go" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal"
            android:paddingRight="26dp">

            <TextView
                android:id="@+id/item_buy_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/item_buy_money"
                android:gravity="center_vertical|left"
                android:text="竞彩-混合投注"
                android:textColor="@color/graySix"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/item_buy_money"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical|right"
                android:text="+10"
                android:textSize="16dp" />
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>
