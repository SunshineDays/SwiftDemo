<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f2f2f2"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bet_item_date"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/grayThree"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/bet_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/grayThree"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/bet_item_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/grayThree"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/bet_item_home"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/bet_item_away"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/bet_item_vs"
                android:gravity="center_vertical|right"
                android:textColor="@color/grayThree"


                android:text="-" />

            <TextView
                android:id="@+id/bet_item_vs"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="VS" />

            <TextView
                android:id="@+id/bet_item_away"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/bet_item_vs"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/bet_item_vs"
                android:gravity="center_vertical"
                android:textColor="@color/grayThree"

                android:text="-" />

        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bet_item_wave"
                android:layout_width="18dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/bet_item_content"
                android:layout_alignParentTop="true"
                android:background="@drawable/angle_round_gray"
                android:gravity="center"
                android:minWidth="8dp"
                android:text="èƒ†"
                android:textColor="@color/gray"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/bet_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toEndOf="@+id/bet_item_wave"
                android:layout_toStartOf="@+id/bet_item_delete"
                android:background="@drawable/bet_bg_white"
                android:gravity="center"
                android:minHeight="30dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/bet_item_delete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:src="@mipmap/icon_delete_red" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
