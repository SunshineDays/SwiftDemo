<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:orientation="horizontal"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:src="@mipmap/icon_back" />

        <TextView
            android:id="@+id/bar_left_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@+id/bar_right_title"
            android:layout_alignBottom="@+id/bar_right_title"
            android:layout_toEndOf="@+id/bar_back"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/bar_center_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:ellipsize="end"
            android:maxEms="10"
            android:textColor="@color/white"
            android:textSize="18dp" />


        <ImageView
            android:id="@+id/bar_right_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"

            android:gravity="center"
            android:src="@mipmap/icon_choose" />

        <TextView
            android:id="@+id/bar_right_title"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:gravity="center" />
    </RelativeLayout>

</RelativeLayout>
